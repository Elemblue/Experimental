<Window x:Class="Ex1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ex1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    
    <StackPanel Orientation="Horizontal" Height="auto" VerticalAlignment="Top">
            <Label>Customer name:</Label>
            <TextBox Text="{Binding Customer.Name, UpdateSourceTrigger=PropertyChanged}" Width="136"/> 
            <Button Command="{Binding UpdateCommand}">Update</Button> <!--This looks for a command under ICommand in the ViewModel-->
        </StackPanel>

</Window>
